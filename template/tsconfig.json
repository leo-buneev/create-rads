{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext","dom.iterable"],
    "outDir": "dist/ts",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "disableSizeLimit": true
  },
  "include": ["./**/*", ".eslintrc.js"],
  "exclude": ["dist", "node_modules", "babel.config.js"],
}
